@model Hospital_Management_System.Models.Ambulance

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit Ambulance</h1>
<hr />
<div class="row justify-content-center align-items-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmbulanceId" class="control-label"></label>
                <input asp-for="AmbulanceId" class="form-control" />
                <span asp-validation-for="AmbulanceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmbulanceStatus" class="control-label"></label>
                <input asp-for="AmbulanceStatus" class="form-control" />
                <span asp-validation-for="AmbulanceStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmbulanceDriverId" class="control-label"></label>
                <select asp-for="AmbulanceDriverId" class="form-control" asp-items="ViewBag.AmbulanceDriverId"></select>
                <span asp-validation-for="AmbulanceDriverId" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
