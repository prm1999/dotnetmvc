@model Hospital_Management_System.Models.Schedule

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit Schedule</h1>
<hr />
<div class="row justify-content-center align-items-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DoctorId" class="control-label"></label>
                <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.DoctorId"></select>
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvailableStartDay" class="control-label"></label>
                <input asp-for="AvailableStartDay" class="form-control" />
                <span asp-validation-for="AvailableStartDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvailableEndDay" class="control-label"></label>
                <input asp-for="AvailableEndDay" class="form-control" />
                <span asp-validation-for="AvailableEndDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvailableStartTime" class="control-label"></label>
                <input asp-for="AvailableStartTime" class="form-control" />
                <span asp-validation-for="AvailableStartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvailableEndTime" class="control-label"></label>
                <input asp-for="AvailableEndTime" class="form-control" />
                <span asp-validation-for="AvailableEndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimePerPatient" class="control-label"></label>
                <input asp-for="TimePerPatient" class="form-control" />
                <span asp-validation-for="TimePerPatient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
