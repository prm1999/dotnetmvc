@model IEnumerable<Hospital_Management_System.Models.Schedule>

@{
    ViewData["Title"] = "Index";
}
<div class="card  bg-success mb-3" style="max-width: 9rem;">
    <h1>Index</h1>
</div>

    <div class="btn btn-light btn-lg">
        <a asp-action="Create">Create New</a>
    </div>

    <table class="table">
        <thead class="table-success">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Doctor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AvailableStartDay)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AvailableEndDay)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AvailableStartTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AvailableEndTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TimePerPatient)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table table-striped bg-warning border-dark">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Doctor.BloodGroup)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AvailableStartDay)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AvailableEndDay)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AvailableStartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AvailableEndTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimePerPatient)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
